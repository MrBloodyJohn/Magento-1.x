<style>
    .dotpay-form-widget-container img, .selectedChannelContainer img {
        display: inline;
    }
    
    #dotpay_dotpay_redirection_form span.field-row {
        display: inline;
    }

    .selected-channel-message {
        display: none;
        font-size: 17px;
        text-decoration: none;
